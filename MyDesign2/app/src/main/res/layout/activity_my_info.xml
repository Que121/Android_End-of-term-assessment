<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/item_tithle_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"

            android:paddingLeft="5dp"
            android:text="班级:"
            android:textColor="@color/gray_222222"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/input_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入班级"

            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/gray_222222"
            android:textColorHint="#cccccc"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="55dp"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"

            android:paddingLeft="5dp"
            android:text="姓名:"
            android:textColor="@color/gray_222222"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入姓名"

            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/gray_222222"
            android:textColorHint="#cccccc"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="55dp"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"

            android:paddingLeft="5dp"
            android:text="学号:"
            android:textColor="@color/gray_222222"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/input_numb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入学号"
            android:inputType="number"

            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/gray_222222"
            android:textColorHint="#cccccc"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="55dp"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"

            android:paddingLeft="5dp"
            android:text="家乡:"
            android:textColor="@color/gray_222222"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/input_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入家乡"

            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/gray_222222"
            android:textColorHint="#cccccc"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="55dp"
            android:background="#cccccc" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bnt_ok"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/bg_selector_solid_blue_corner"
            android:minWidth="120dp"
            android:text="确认" />

        <Button
            android:id="@+id/bnt_clean"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_selector_solid_blue_corner"
            android:minWidth="120dp"
            android:text="清除" />
    </LinearLayout>

</LinearLayout>